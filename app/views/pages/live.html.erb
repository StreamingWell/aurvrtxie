</section>

<section class="orkambi-question">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <!-- flash_notice to show if form submission is successful -->
            <div class="alert alert-success" id="form-success" style="display: none; margin-top: 15px; margin-bottom: 0px;">
                <strong>Thank you, your question was successfully sent.</strong>
            </div>
            <!-- flash_notice to show if form submission is unsuccessful -->
            <div class="alert alert-error" id="form-error" style="display: none; margin-top: 15px; margin-bottom: 0px;">
                <strong>Please fill in all fields.</strong>
            </div>
            <%= simple_form_for @message, :url => contact_path, method: :post, remote: true, html: { class: "form-horizontal"} do |form| %>
            <br />
            <%= form.input :body, label: false, placeholder: "If you have a question and would like to be contacted by a Vertex representative, please type your request here", required: false, as: :text, input_html: { rows: "6", style: "display: block;width: 100%;padding: 6px 12px;font-size: 14px;line-height: 1.42857143;color: #555;background-color: #fff;background-image: none;border: 3px solid #e9e9e9;border-radius: 4px !important;-webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);box-shadow: inset 0 1px 1px rgba(0,0,0,.075);-webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;-o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;" } %>
            <br />
            <%= form.input "email", as: :hidden, :input_html =>  {value: current_user.email} %>
            <p align="left">For medical information requests at any time, please email Vertex at <br /> <a href="mailto:vertexmedicalinfo@vrtx.com" style="text-decoration: underline !important">vertexmedicalinfo@vrtx.com</a>.</p>
            <%= form.submit "Submit", class: 'btn btn-inverse btn-large' %>
            
            <% end %>
            </div>
        </div>
    </div>      
</section>
<br />

<%= render 'layouts/disclaimer' %>
<%= render 'layouts/footer' %>  